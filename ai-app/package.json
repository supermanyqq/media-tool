{
  "name": "ai-app",
  "version": "0.1.0",
  "private": true,
  "main": "src/main/main.js",
  "description": "AI语音助手应用",
  "author": "Your Name",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "npm run dev:electron",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5174 && electron .\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.ai.app",
    "productName": "AI语音助手",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asar": true
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "antd": "^5.0.0",
    "axios": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0",
    "ws": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0",
    "less": "^4.5.1",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  }
}
